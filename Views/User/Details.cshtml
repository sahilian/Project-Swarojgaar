@model Swarojgaar.Models.User
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<h1>User Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <!-- Display the document download link if the user has uploaded a document -->
        @if (!string.IsNullOrEmpty(Model.DocFile))
        {
                <dt class="col-sm-2">Document</dt>
                <dd class="col-sm-10">
                    <a class="btn btn-success" asp-action="DownloadDocument" asp-route-docFileName="@Model.DocFile"><i class="bi bi-cloud-arrow-down-fill"></i> Download Document</a>
                </dd>
        }

        <!-- Add other user details as needed -->
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-warning"><i class="bi bi-box-arrow-left"></i> Back to List</a>
</p>